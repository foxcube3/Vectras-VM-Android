<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_yagiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="15dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/mainDark"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/ic_launcher"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TextView
                            style="@android:style/Widget.TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_version"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_github"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:backgroundTint="@color/mainDark"
                    app:icon="@drawable/ic_github"
                    android:padding="8dp"
                    android:text="Repository"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textColor="@android:color/white"
                    app:iconTint="@color/white" />

                <Button
                    android:id="@+id/btn_telegram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:icon="@drawable/ic_telegram"
                    android:padding="8dp"
                    android:text="Telegram Channel"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/mainDark"
                    app:iconTint="@color/white" />

                <Button
                    android:id="@+id/btn_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:icon="@drawable/ic_youtube"
                    app:iconTint="@color/white"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:padding="8dp"
                    android:text="Youtube"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/mainDark" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:visibility="visible"
            app:cardBackgroundColor="@color/mainDark"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_changelog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:icon="@drawable/round_info_24"
                    app:iconTint="@color/white"
                    android:padding="8dp"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:text="Change Log"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/mainDark" />

                <Button
                    android:id="@+id/btn_osl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:icon="@drawable/round_info_24"
                    app:iconTint="@color/white"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:padding="8dp"
                    android:text="Info"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/mainDark" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>